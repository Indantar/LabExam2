<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" android:id="@+id/MyActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/btnReadXml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read XML"
            android:layout_centerVertical="true" android:layout_alignParentStart="true"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/printDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Print DataBase"
            android:layout_below="@+id/btnReadXml" android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="deleteRow"
            android:id="@+id/button" android:layout_below="@+id/printDB" android:layout_alignParentStart="true"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="change"
            android:id="@+id/button2" android:layout_below="@+id/button" android:layout_alignParentStart="true"/>
</RelativeLayout>